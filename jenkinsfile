pipeline {
    agent any

    environment {
        PATH = "$PATH:/usr/share/maven/bin"
    }

    triggers {
        githubPush()
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'master', 
                    url: 'https://github.com/Deepakram0929/web.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn compile'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Code Quality') {
            steps {
                sh '''
                mvn sonar:sonar \
                  -Dsonar.projectKey=web-app \
                  -Dsonar.host.url=http://54.172.1.147:9000 \
                  -Dsonar.login=3a57137c97247abfa6a4f1c44284516e25725ae8
                '''
            }
        }

        stage('Package') {
            steps {
                sh 'mvn clean package'
                sh 'cp target/*.war .'
            }
            post {
                success {
                    echo 'Deployment successful!'
                    archiveArtifacts artifacts: '*.war'
                }
            }
        }

        stage('Deploy to Tomcat Server') {
            steps {
                echo 'Deploying to Tomcat server...'
                step([$class: 'DeployPublisher',
                    adapters: [tomcat9(
                        alternativeDeploymentContext: '', 
                        credentialsId: 'tomcat', 
                        path: '', 
                        url: 'http://54.172.1.147:9090/'
                    )],
                    contextPath: 'deepak-web',
                    war: '*.war'
                ])
            }
        }
    }

    post {
        always {
            script {
                def buildStatus = currentBuild.currentResult
                def buildUser = currentBuild.getBuildCauses('hudson.model.Cause$UserIdCause')[0]?.userId ?: 'Auto Triggered'
                def color = buildStatus == 'SUCCESS' ? 'green' : 'red'

                emailext(
                    subject: "Jenkins Build Notification - ${currentBuild.fullDisplayName}",
                    body: """
                        <h2 style="color:${color};">Build Notification</h2>
                        <p><strong>Project:</strong> ${env.JOB_NAME}</p>
                        <p><strong>Build Number:</strong> ${env.BUILD_NUMBER}</p>
                        <p><strong>Status:</strong> <span style="color:${color};">${buildStatus}</span></p>
                        <p><strong>Started by:</strong> ${buildUser}</p>
                        <p><strong>View build:</strong> <a href="${env.BUILD_URL}">${env.BUILD_URL}</a></p>
                    """,
                    to: 'deepakram0929@gmail.com',
                    from: 'deepakram0929@gmail.com',
                    replyTo: 'deepakram0920@gmail.com',
                    mimeType: 'text/html'
                )
            }
        }
    }
}
